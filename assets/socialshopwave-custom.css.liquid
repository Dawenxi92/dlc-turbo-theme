#widget-fave-html {
  max-width: 400px;
  width: 100%;
  margin-bottom: 11px;
}

#widget-fave-html .ssw-fave-btn {
  width: 100%; 
}

#widget-fave-html .ssw-fave-btn-content {
  width: 100%;
  font-family: inherit;
  font-size: .75em;
  border-radius: 0;
  color: #fff;
  border-color: #6331de;
  background-color: #6331de;
  text-transform: uppercase;
  letter-spacing: .08em;
  font-weight: 600; 
}

#widget-fave-html .ssw-fave-btn-counter,
#widget-fave-html .ssw-fave-btn-counter:before {
  border-radius: 0;
  color: #fff;
  border-color: #6331de;
  background-color: #6331de;
}